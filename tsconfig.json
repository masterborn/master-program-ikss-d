{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "commonjs",
    "jsx": "preserve",
    "target": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "importHelpers": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "outDir": "dist",
    "typeRoots": ["./node_modules/@types"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@root/*": ["./src/*"],
      "@api/*": ["./src/api/*"],
      "@api": ["./src/api/index.ts"],
      "@assets/*": ["./src/assets/*"],
      "@clients/*": ["./src/clients/*"],
      "@components/*": ["./src/components/*"],
      "@consts/*": ["./src/consts/*"],
      "@contextProviders/*": ["./src/contextProviders/*"],
      "@extension/*": ["./src/extension/*"],
      "@styles/*": ["./src/styles/*"],
      "@utils/*": ["./src/utils/*"],
      "@utils": ["./src/utils/index.ts"],
      "@typings/*": ["./src/typings/*"],
      "@hoc/*": ["./src/hoc/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@views/*": ["./src/views/*"]
    }
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src", "tests","next.config.js", "sentry.client.config.js","sentry.server.config.js","jest.config.js"]
}
